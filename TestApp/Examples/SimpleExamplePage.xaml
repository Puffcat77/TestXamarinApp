<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.SimpleExamplePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="It's simple button text change example" />
            <Label Text="Link to tutorial">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LinkTapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Button x:Name="WhooshBtn" Text="Whoosh!" Clicked="WhooshBtn_Clicked" CornerRadius="200" />
            <Button x:Name="CloseBtn" Text="Close!" Clicked="CloseBtn_Clicked" CornerRadius="200" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>